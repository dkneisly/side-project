<% provide(:title, 'All users') %>
<div class="navbar-padding"></div>
<div class="navbar-padding"></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">All Users</h1>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item">
          <%= image_tag user.gravatar_url %>
          <%= link_to user.email, user %>
          <% if current_user.executive? && !current_user?(user) %>
            <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, user, method: :delete, data: { confirm: "You sure?" }, class: 'pull-right' %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>